#!/bin/bash -e
#
# Build CyberArk sidecar injector mutating webhook service
# usage: ./bin/build
set -ex

cd "$(dirname "${0}")"
. ./build_utils
cd ..

readonly IMAGE_NAME="sidecar-injector"

docker build \
  --build-arg "GIT_COMMIT_SHORT=$(git_commit_short)" \
  -t "${IMAGE_NAME}:latest" \
  -t "${IMAGE_NAME}:$(full_version_tag)" \
  .
